---
const { herocopy, imagelink } = Astro.props;
---
<section class="
            w-100

            my-4
            p-5
            pb-0
            lg:pt-8
            lg:px-8

            bg-green-50/30 

            border-2 
            border-stone-300/20
            rounded-2xl 
            lg:rounded-3xl

            overflow-hidden">
    <h2 class="
        lg:text-2xl

        text-green-600
        font-normal
        tracking-tight
        leading-tight
        
        mb-4
        lg:mb-8
        
        ">
        {herocopy}
    </h2>
    
    <img 
        src={imagelink}
        class="
            w-100 
            mt-2

            rounded-t-lg

            shadow-2xl 
            shadow-green-900/40
        "
    />
</section>
